{
  "manifest_version": 3,
  "name": "ShopList Clipper",
  "version": "1.0",
  "description": "Clip items from Amazon, eBay, and AliExpress to your ShopListTracker.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.ebay.com/*",
    "*://*.aliexpress.com/*",
    "*://*.aliexpress.us/*",
    "*://theultimateabsol.github.io/*",
    "http://127.0.0.1:5500/*" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.ebay.com/*",
        "*://*.aliexpress.com/*",
        "*://*.aliexpress.us/*",
        "*://theultimateabsol.github.io/*",
        "http://127.0.0.1:5500/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}